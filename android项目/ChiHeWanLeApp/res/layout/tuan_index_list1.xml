<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/little_sapce" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/tuan_index_image_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/tuan_item" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="4dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tuan_index_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="炽热青春怀旧主题餐厅"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_zhuti" />

                <TextView
                    android:id="@+id/tuan_distant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="10km" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tuan_index_xtext_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little_sapce"
                android:maxLines="2"
                android:minLines="2"
                android:text="            炽热青春周一专享优惠  .....                             "
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_zhuti2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tuan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/normal_orange"
                    android:textSize="@dimen/text_size_zhuti" />

                <TextView
                    android:id="@+id/tuan_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/little_sapce"
                    android:text="190"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_zhuti2" />

                <TextView
                    android:id="@+id/tuan_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/little_sapce"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="100份" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>
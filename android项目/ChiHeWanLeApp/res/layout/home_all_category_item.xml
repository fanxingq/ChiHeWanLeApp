<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:padding="@dimen/normal_space">
      
    <ImageView
        android:id="@+id/category_index_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/little_sapce"
        android:src="@drawable/nav_food" />

    <TextView
        android:id="@+id/category_index_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/little_sapce"
       android:layout_toRightOf="@id/category_index_item_img"
       android:text="@string/app_name"
       android:textSize="@dimen/text_size_default"
       android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/category_index_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="100" />

</RelativeLayout>
